# 应用配置
APP_NAME=BPM Agent
APP_VERSION=1.0.0
DEBUG=True
SECRET_KEY=your-secret-key-here

# 数据库配置
DATABASE_URL=postgresql://username:password@localhost:5432/bpm_agent
# 或使用SQLite: sqlite:///./bpm_agent.db

# Redis配置
REDIS_URL=redis://localhost:6379/0

# 阿里百炼API配置
QWEN_API_KEY=your-qwen-api-key
QWEN_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1
QWEN_MODEL=qwen-max

# OCR服务配置 (选择其一)
# 百度OCR
BAIDU_OCR_API_KEY=your-baidu-api-key
BAIDU_OCR_SECRET_KEY=your-baidu-secret-key

# 腾讯OCR
TENCENT_SECRET_ID=your-tencent-secret-id
TENCENT_SECRET_KEY=your-tencent-secret-key

# 阿里云OCR
ALIYUN_ACCESS_KEY_ID=your-aliyun-access-key-id
ALIYUN_ACCESS_KEY_SECRET=your-aliyun-access-key-secret

# PaddleOCR服务地址 (如果自部署)
PADDLE_OCR_URL=http://localhost:8866

# JWT配置
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# 文件上传配置
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR=./uploads

# 浏览器配置
BROWSER_HEADLESS=False  # 开发时设为False便于调试
BROWSER_TIMEOUT=30000